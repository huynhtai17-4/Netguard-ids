# ============================================
# NetGuard IDS Environment Configuration Template
# ============================================
# Copy this file to .env and update values for your environment
# NEVER commit actual .env files to version control!
# ============================================

# ========== APPLICATION CORE ==========
# Application environment: development, production, testing
APP_ENV=development
# Secret key for Flask session encryption (change in production!)
FLASK_SECRET_KEY=your-super-secret-key-here-change-in-production
# Debug mode (disable in production!)
FLASK_DEBUG=True

# ========== DATABASE CONFIGURATION ==========
# Database connection URL (SQLite, PostgreSQL, MySQL)
# SQLite Example: sqlite:///storage/netguard.db
# PostgreSQL Example: postgresql://user:password@localhost:5432/netguard
# MySQL Example: mysql://user:password@localhost:3306/netguard
DATABASE_URL=sqlite:///storage/netguard.db
# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========== NETWORK CAPTURE ==========
# Network interface for packet capture (use 'any' for all interfaces)
INTERFACE_NAME=eth0
# Capture filter (BPF syntax)
CAPTURE_FILTER=tcp or udp or icmp
# Maximum packets to capture per batch
CAPTURE_BATCH_SIZE=1000
# Capture timeout in milliseconds
CAPTURE_TIMEOUT=1000

# ========== DETECTION CONFIGURATION ==========
# Detection mode: hybrid, rule_only, ml_only
DETECTION_MODE=hybrid
# Confidence threshold for ML detection (0.0-1.0)
ML_CONFIDENCE_THRESHOLD=0.85
# Update model automatically (true/false)
MODEL_AUTO_UPDATE=false

# ========== ALERTING & NOTIFICATIONS ==========
# Enable email alerts (true/false)
ALERT_EMAIL_ENABLED=false
# Email server configuration
ALERT_EMAIL_SERVER=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_FROM=noreply@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# Enable Slack alerts (true/false)
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/XXXX/XXXX

# Enable console alerts (true/false)
ALERT_CONSOLE_ENABLED=true

# ========== DASHBOARD SECURITY ==========
# JWT Secret Key (change in production!)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
# JWT expiration time in hours
JWT_EXPIRATION_HOURS=24
# Admin user credentials (change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
# Enable authentication (true/false)
AUTH_ENABLED=true

# ========== LOGGING CONFIGURATION ==========
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path
LOG_FILE_PATH=logs/netguard.log
# Enable JSON logging (true/false)
JSON_LOGGING=false

# ========== PROMETHEUS METRICS ==========
# Enable Prometheus metrics (true/false)
PROMETHEUS_ENABLED=true
# Prometheus metrics port
PROMETHEUS_PORT=9090

# ========== ADVANCED SETTINGS ==========
# Flow inactivity timeout in seconds
FLOW_INACTIVITY_TIMEOUT=120
# Flow activity timeout in seconds
FLOW_ACTIVITY_TIMEOUT=3600
# Max number of flows to keep in memory
MAX_FLOWS=10000
# Data retention period in days
DATA_RETENTION_DAYS=30

# ========== EXTERNAL INTEGRATIONS ==========
# VirusTotal API Key (for threat intelligence)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
# AbuseIPDB API Key (for IP reputation)
ABUSEIPDB_API_KEY=your-abuseipdb-api-key